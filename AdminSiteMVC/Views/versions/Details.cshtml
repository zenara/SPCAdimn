@model IEnumerable<AdminSiteMVC.Models.section>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@foreach (var head in Model.Take(1))
{
    <dl class="dl-horizontal">
        <h4>
            <dt>
                Policy Number:
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => head.policy.p_no)
            </dd>
        </h4>
        <h4>
            <dt>
                Version Number:
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => head.version.v_no)
</dd>
        </h4>
    </dl>
}
<table class="table">
    <tr>
        <th>
            <h3>
                @Html.DisplayNameFor(model => model.content)
            </h3>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (Model.Count() == 0)
        {
            <td class="warning">No content to be previewed</td>
        }
        <tr>
            <td>
                <h4>Section @Html.DisplayFor(modelItem => item.sec_no) </h4>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.content)
            </td>
        </tr>
        
    }

</table>


