@model IEnumerable<AdminSiteMVC.Models.section>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Active Policy";
}

    <h2>Active Policy</h2>

    <a href="@Url.Action("Index","versions")" class="menu-btn btn btn-default" style="float:right"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Policy Log</a>

@foreach (var head in Model.Take(1))
{
    <dl class="dl-horizontal">
        <h4>
            <dt>
                Policy Number:
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => head.policy.p_no)
            </dd>
        </h4>
        <h4>
            <dt>
                Version Number:
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => head.version.v_no)
            </dd>
        </h4>
    </dl>
}
<table class="table">
    <tr>
        <th><h3>
    @Html.DisplayNameFor(model => model.content)
</h3></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <h4>Section @Html.DisplayFor(modelItem => item.sec_no) </h4> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.content)
            </td>
        </tr>
    }

</table>